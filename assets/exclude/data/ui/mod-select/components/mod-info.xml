<?xml version="1.0" encoding="utf-8"?>
<vbox width="85%" height="85%" verticalAlign="center" horizontalAlign="center">
  <hbox width="100%" height="25%">
    <image id="modWindowIcon" style="border:1px solid $normal-border-color" scaleMode="fitinside" height="100%" width="this.height;"/>
    <vbox width="100%" height="100%">
      <spacer height="25%" />
      <scrollview width="100%" height="32" contentHeight="100%" verticalAlign="center">
        <label id="modWindowName" text="Your Mod's Name goes here!" style="font-size: 24px" verticalAlign="center"/>
      </scrollview>
      <hbox width="100%">
        <label id="modWindowVersion" text="Mod Version: 1.0.0" style="font-size: 18px" width="100%"/>
        <spacer width="100%" />
        <button id="modWindowHomepage" text="Visit Homepage"/>
      </hbox>
      <label id="modWindowDependency" text="" style="font-size: 12px; color: 0xff8c00;" width="100%"/>
      <label id="modWindowOptional" text="" style="font-size: 12px; color: 0xffff00;" width="100%"/>
    </vbox>
  </hbox>

  <label text="Description" width="100%" style="font-size: 18px"/>
  <scrollview width="100%" height="25%" contentWidth="100%">
    <label id="modWindowDesc" width="100%" textAlign="left" text="Your Mod's Description goes here!"/>
  </scrollview>

  <hbox width="100%" height="50%">
    <vbox width="30%" height="100%">
      <label text="Dependencies" style="font-size: 18px"/>
      <scrollview width="100%" height="100%" contentWidth="100%">
        <vbox id="modWindowDependencies" width="100%"/>
      </scrollview>
    </vbox>

    <vbox width="30%" height="100%">
      <label text="Contributors" width="100%" style="font-size: 18px"/>
      <scrollview width="100%" height="100%" contentWidth="100%">
        <vbox id="modWindowContributors" width="100%"/>
      </scrollview>
    </vbox>

    <vbox width="40%" height="100%">
      <label text="Files" width="100%" style="font-size: 18px"/>
      <scrollview width="100%" height="100%" contentWidth="100%">
        <vbox id="modWindowFiles" width="100%">
          <tree-view id="modWindowFileTree" width="100%"/>
        </vbox>
      </scrollview>
    </vbox>
  </hbox>

  <label id="modWindowLicense" text="Mod License" style="font-size: 18px"/>
</vbox>
