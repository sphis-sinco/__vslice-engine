<box width="100%" height="48" style="background-color: $solid-background-color; padding: 8px;" verticalAlign="bottom">
  <hbox horizontalAlign="left">
		<button id="modListLoadAll" text="Enable All"/>
		<button id="modListUnloadAll" text="Disable All"/>
  </hbox>

  <hbox horizontalAlign="center">
      <label text="Click to Enable/Disable.\nRight Click to View Info." />
      <label text="\n(If Loaded: Shift+Click to Move Upwards.\nCtrl+Click to Move Downwards.)" />
  </hbox>

  <hbox horizontalAlign="right">
    <button id="modListApplyButton" text="Apply" disabled="true"/>
    <button id="modListExitButton" text="Exit"/>
  </hbox>
</box>
